# Base URLs
SERVER_BASE_URL=http://localhost:8001
RESPONSE_URI=http://localhost:8001/verifier/response
# After direct_post, redirect here (use openid:// for mobile or a real URL for web)
REDIRECT_URI=openid://

# Request Object (JAR) signing key (ES256)
# Use either the file path OR inline PEM below. If file path is missing, a key is generated at startup.
REQUEST_JWT_PRIVATE_KEY_PATH=./data/jar-ec256-key.pem
REQUEST_JWT_PRIVATE_KEY=
REQUEST_JWT_PRIVATE_KEY_PASS=

# Holder private key (used by bridge/id-proof and presentations helper)
# Provide a PEM path OR a JWK JSON payload
HOLDER_PRIVATE_PEM_PATH=data/holder_jwk_private.pem
HOLDER_PRIVATE_JWK_JSON=

# Data directory for local storage
DATA_DIR=data

